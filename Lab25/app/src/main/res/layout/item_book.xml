<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="@dimen/item_padding_vertical"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/bookIcon"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:src="@drawable/outline_book_2_24"
        android:layout_marginEnd="@dimen/icon_margin_end"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bookTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_book_title"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_title"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/bookAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_book_author"
            android:textSize="@dimen/text_size_author"
            android:textColor="#666666"/>
    </LinearLayout>
</LinearLayout>
